% Color definitions
\definecolor{wf-teal}{RGB}{106, 154, 153}
\definecolor{wf-purple}{RGB}{89, 34, 71}

% Text
\setbeamercolor*{date}{fg=wf-purple}
\setbeamercolor*{title}{fg=wf-teal}
\setbeamercolor*{subtitle}{fg=wf-teal}
\setbeamercolor*{itemize item}{fg=wf-purple!75}
\setbeamercolor*{itemize subitem}{fg=wf-purple}
\setbeamercolor*{item projected}{bg=wf-purple}
\setbeamercolor*{local structure}{fg=wf-purple}
\setbeamercolor*{normal text}{fg=black}
\setbeamercolor*{block title}{fg=wf-purple}

\setbeamerfont{title}{size=\Huge}
\setbeamerfont{subtitle}{size=\large}

% Frame chrome
\setbeamercolor{frametitle}{fg=white,bg=wf-teal}
\setbeamercolor{footline}{fg=white,bg=wf-teal!70}
