% Color definitions
\definecolor{hs-orange}{RGB}{255, 122, 89}
\definecolor{hs-slate}{RGB}{51, 71, 91}

% Text colors
\setbeamercolor*{date}{fg=hs-slate}
\setbeamercolor*{title}{fg=hs-orange}
\setbeamercolor*{subtitle}{fg=hs-orange}
\setbeamercolor*{itemize item}{fg=hs-slate!75}
\setbeamercolor*{itemize subitem}{fg=hs-slate}
\setbeamercolor*{item projected}{bg=hs-slate}
\setbeamercolor*{local structure}{fg=hs-slate}
\setbeamercolor*{normal text}{fg=black}
\setbeamercolor*{block title}{fg=hs-slate}

% Text fonts
\setbeamerfont{title}{size=\Huge}
\setbeamerfont{subtitle}{series=\bfseries}
\setbeamerfont{subtitle}{size=\large}

% Frame chrome
\setbeamercolor{frametitle}{fg=white,bg=hs-orange}
\setbeamercolor{footline}{fg=white,bg=hs-slate!90}
